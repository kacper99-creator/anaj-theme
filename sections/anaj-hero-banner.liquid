        { "type": "text", "id": "eyebrow", "label": "Badge", "default": "PREMIUM" },
        { "type": "text", "id": "title", "label": "Tytuł", "default": "Nagłówek slajdu" },
        { "type": "text", "id": "subtitle", "label": "Podtytuł", "default": "" },
        { "type": "url", "id": "cta_link", "label": "CTA link" },
        { "type": "text", "id": "cta_label", "label": "CTA tekst", "default": "Zamów teraz!" }
      ]
    }
  ],

  "max_blocks": 6,
  "presets": [
    {
      "name": "ANAJ – hero banner (slider)",
      "category": "Nagłówek",
      "blocks": [
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
